<h1 id="title">Ember Modal Dialog</h1>

{{outlet}}

<div class='example' id='example-basic'>
<h2>Basic</h2>
  <button {{action 'toggleBasic'}}>Do It</button>
  {{code-snippet name='basic.hbs'}}
  {{#if isShowingBasic}}
    {{#modal-dialog close='toggleBasic'}}
      <h1>Stop! Modal Time!</h1>
      <p>Basic</p>
      <button {{action 'toggleBasic'}}>Close</button>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example' id='example-translucent'>
  <h2>With Translucent Overlay</h2>
  <button {{action 'toggleTranslucent'}}>Do It</button>
  {{code-snippet name='translucent.hbs'}}
  {{#if isShowingTranslucent}}
    {{#modal-dialog close='toggleTranslucent'
                    translucentOverlay=true}}
      <h1>Stop! Modal Time!</h1>
      <p>With Translucent Overlay</p>
      <button {{action 'toggleTranslucent'}}>Close</button>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example' id='example-custom-styles'>
  <h2>Custom Styles</h2>
  <button {{action 'toggleCustomStyles'}}>Do It</button>
  {{code-snippet name='custom-styles.hbs'}}
  {{code-snippet name='custom-styles.scss'}}
  {{#if isShowingCustomStyles}}
    {{#modal-dialog close='toggleCustomStyles'
                    alignment='none'
                    container-class=customContainerClassNames
                    overlay-class='custom-styles-modal' }}
      <h1>Stop! Modal Time!</h1>
      <p>Custom Styles</p>
      <button {{action 'toggleCustomStyles'}}>Close</button>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example' id='example-alignment-target-selector'>
  <h2>Alignment Target (Selector)</h2>
  <div class='alignmentTargetContainer'>
    <button id='alignModalToMe' {{action 'toggleAlignmentTargetSelector'}}>Do It</button>
  </div>
  {{code-snippet name='alignment-target-selector.hbs'}}
  {{#if isShowingAlignmentTargetSelector}}
    {{#modal-dialog close='toggleAlignmentTargetSelector'
                    hasOverlay=false
                    alignment=alignmentTargetDirection
                    alignmentTarget='#alignModalToMe' }}
      <h1>Stop! Modal Time!</h1>
      <p>Alignment Target - Selector: '#alignModalToMe'</p>
      <p>Alignment: {{alignmentTargetDirection}}</p>
      <button {{action 'closeAlignmentTargetSelector'}}>Close</button>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example' id='example-alignment-target-view'>
  <h2>Alignment Target (View)</h2>
  <div class='alignmentTargetContainer'>
    {{#view viewName="buttonWrapper1" tagName="span"}}
      <button {{action 'toggleAlignmentTargetView'}}>Do It</button>
    {{/view}}
  </div>
  {{code-snippet name='alignment-target-view.hbs'}}
  {{#if isShowingAlignmentTargetView}}
    {{#modal-dialog close='toggleAlignmentTargetView'
                    hasOverlay=false
                    alignment=alignmentTargetDirection
                    alignmentTarget=view.buttonWrapper1 }}
      <h1>Stop! Modal Time!</h1>
      <p>Alignment Target - View: {{view.buttonWrapper1}}</p>
      <p>Alignment: {{alignmentTargetDirection}}</p>
      <button {{action 'closeAlignmentTargetView'}}>Close</button>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example' id='example-alignment-target-element'>
  <h2>Alignment Target (Element)</h2>
  <div class='alignmentTargetContainer'>
    {{#view viewName="buttonWrapper2" tagName="span"}}
      <button {{action 'toggleAlignmentTargetElement'}}>Do It</button>
    {{/view}}
  </div>
  {{code-snippet name='alignment-target-element.hbs'}}
  {{#if isShowingAlignmentTargetElement}}
    {{#modal-dialog close='toggleAlignmentTargetElement'
                    hasOverlay=false
                    alignment=alignmentTargetDirection
                    alignmentTarget=view.buttonWrapper2.element }}
      <h1>Stop! Modal Time!</h1>
      <p>Alignment Target - Element{{view.buttonWrapper2.elementId}}</p>
      <p>Alignment: {{alignmentTargetDirection}}</p>
      <button {{action 'closeAlignmentTargetElement'}}>Close</button>
    {{/modal-dialog}}
  {{/if}}
</div>

<div class='example' id='example-subclass'>
  <h2>Via Subclass</h2>
